<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>


    <display-name>Archetype Created Web Application</display-name>
    <listener>
        <listener-class>com.vstadnyk.listener.MyServletInitialisedListener</listener-class>        
    </listener>
    <listener>
        <listener-class>com.vstadnyk.listener.MyAttributeListener</listener-class>
    </listener>

    <context-param>
        <param-name>host</param-name>
        <param-value>localhost</param-value>
    </context-param>

    <context-param>
        <param-name>ip</param-name>
        <param-value>127.0.0.1</param-value>
    </context-param>

    <servlet>
        <servlet-name>Main Servlet</servlet-name>
        <servlet-class>com.vstadnyk.MainServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>Main Servlet</servlet-name>
        <url-pattern>/main.do</url-pattern>
    </servlet-mapping>

</web-app>

